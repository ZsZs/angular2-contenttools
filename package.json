{
  "name": "angular2-contenttools",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build-dev": "npm run build-lib-dev && npm run build-app-dev",
    "build-prod": "npm run build-lib-prod && npm run build-app-prod",
    "build-app-dev": "ng build angular2-contenttools-app",
    "build-app-prod": "ng build angular2-contenttools-app",
    "build-lib-dev": "ng build angular2-contenttools-lib --configuration=development",
    "build-lib-prod": "ng build angular2-contenttools-lib --configuration=production",
    "ci": "npm run lint && npm run build-prod && npm run test && npm run npm-pack",
    "deploy": "firebase deploy",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "npm-pack": "cd dist/angular2-contenttools-lib && npm pack",
    "test": "npm run test-app && npm run test-lib",
    "test-app": "ng test angular2-contenttools-app --browsers ChromeHeadless",
    "test-app-watch": "ng test angular2-contenttools-app --browsers Chrome --watch",
    "test-lib": "ng test angular2-contenttools-lib --browsers ChromeHeadless --configuration=unit-test --code-coverage",
    "test-lib-watch": "ng test angular2-contenttools-lib --browsers Chrome --watch --configuration=unit-test",
    "package": "npm run build-dev && npm run npm-pack",
    "publish": "cd dist/angular2-contenttools-lib && npm publish",
    "start-c9": "ng serve --host 0.0.0.0 --port 8080 --disableHostCheck"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "ContentTools": "^1.6.5",
    "angular2-materialize": "^15.1.10",
    "angularfire2": "^5.0.0-rc.11",
    "core-js": "^2.5.4",
    "firebase": "^5.2.0",
    "hammerjs": "^2.0.8",
    "jquery": "^3.3.1",
    "materialize-css": "^0.100.2",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^8.9.5",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^3.0.0-rc.2",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
